datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @default(uuid()) @id
  name     String
  email    String @unique
  password String
  posts    Post[]
}

model Post {
  id          String          @default(uuid()) @id
  title       String
  description String
  createdAt   DateTime        @default(now())
  authorId    String
  author      User            @relation(fields: [authorId], references: [id])
  costs       CostCalculate[]
}

model CostCalculate {
  id     String @default(uuid()) @id
  title  String
  price  Float
  post   Post   @relation(fields: [postId], references: [id])
  postId String
}