type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!] @relation(name: "PostsOfUser", onDelete: CASCADE)
}

type Post {
  id: ID! @id
  title: String!
  description: String!
  costs: [CostCalculate!] @relation(onDelete: CASCADE)
  author: User! @relation(name: "PostsOfUser", onDelete: SET_NULL)
  createdAt: DateTime! @createdAt
}

type CostCalculate {
  id: ID! @id
  title: String!
  price: Float!
  post: Post! @relation(link: INLINE, onDelete: SET_NULL)
}
